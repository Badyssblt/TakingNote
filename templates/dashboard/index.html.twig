{% extends 'base.html.twig' %}

{% block title %}Dashboard de {{ app.user.name }}{% endblock %}

{% block body %}
<div class="flex mt-4">
    <div class="w-1/4">
        {% include "dashboard/navbar.html.twig" %}
    </div>
    <main class="flex flex-1 p-3 flex-col">
        <div class="mb-10">
            <p class="text-slate-400">Que voulez-vous prendre en note aujourd'hui ?</p>
            <h2 class="text-current font-bold text-2xl">Dashboard de {{ app.user.name }}</h2>
        </div>
        <div class="container ">
            <h2 class="text-xl font-bold">Vos notes</h2>
            <div class="text-right mr-4 w-100 underline underline-offset-2"><a class="text-slate-400" href="/notes" class="mr-4">Voir tout</a></div>
            <div class="flex w-100 overflow-hidden gap-4">
            
            {% for note in notes %}
            <div class="max-w-md py-4 bg-white rounded-md overflow-hidden border border-gray-300"> <!-- Ajout de la classe "border" et "border-gray-300" pour une bordure grise -->
              <div class="px-6 py-4">
                  <h2 class="text-xl font-semibold text-gray-800 mb-2">{{ note.name }}</h2>
              </div>
              <a href="/note/{{ note.id }}" class="mx-4 justify-center flex items-center gap-2 px-4 py-2 text-white bg-indigo-600 rounded-lg duration-150 hover:bg-indigo-500 active:bg-indigo-700">
                  Voir la note
              </a>
          </div>
          
            {% endfor %} 
          </div>
        </div>
        {% include "dashboard/blocnote.html.twig" %}
          
    </main>
    <div class="w-1/4">
        {% include "dashboard/friends.html.twig" %}
    </div>
</div>
{% endblock %}
